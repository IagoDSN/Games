char board[3][3];
char currentPlayer;
int veia, jag;

void initializeBoard() {
    for( veia = 0; veia < 3; veia++) {
        for (jag = 0; jag < 3; jag++) {
            board[veia][jag] = ' ';
        }
    }
    currentPlayer = 'X';
}

void printBoard() {
	printf("\n\n   0   1   2\n");
    printf("0  %c | %c | %c \n", board[0][0], board[0][1], board[0][2]);
    printf("  ---|---|---\n");
    printf("1  %c | %c | %c \n", board[1][0], board[1][1], board[1][2]);
    printf("  ---|---|---\n");
    printf("2  %c | %c | %c \n", board[2][0], board[2][1], board[2][2]);
}

int checkWin() {
    for (veia = 0; veia < 3; veia++) {
        if (board[veia][0] == currentPlayer && board[veia][1] == currentPlayer && board[veia][2] == currentPlayer) return 1;
        if (board[0][veia] == currentPlayer && board[1][veia] == currentPlayer && board[2][veia] == currentPlayer) return 1;
    }
    if (board[0][0] == currentPlayer && board[1][1] == currentPlayer && board[2][2] == currentPlayer) return 1;
    if (board[0][2] == currentPlayer && board[1][1] == currentPlayer && board[2][0] == currentPlayer) return 1;
    return 0;
}

int checkDraw() {
    for (veia = 0; veia < 3; veia++) {
        for (jag = 0; jag < 3; jag++) {
            if (board[veia][jag] == ' ') {
                return 0;
            }
        }
    }
    return 1;
}


void switchPlayer() {
    currentPlayer = (currentPlayer == 'X') ? 'O' : 'X';
}

